@model IEnumerable<HRDepartment.Models.Staff>

@{
    ViewData["Title"] = "Staff list";
}

<h1>Staff</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">Add new staff</a>
</p>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
@foreach (var item in Model) {
    <div class="col">
        <div class="card h-100">
            @if (!string.IsNullOrEmpty(item.PhotoPath))
            {
                <img src="@item.PhotoPath" class="card-img-top img-fluid" alt="photo" style="object-fit:cover; height:180px;" />
            }
            else
            {
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height:180px;">
                    <span class="text-muted">No photo</span>
                </div>
            }
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@item.Name</h5>
                <div class="mt-auto">
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </div>
            </div>
        </div>
    </div>
}
</div>
